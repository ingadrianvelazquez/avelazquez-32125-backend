<div class="unmedio">
    <section>
        <h3>Product Form</h3>
        <form id="catalogForm">
            <input type="text" name="title" id="title" required placeholder="title">
            <input type="text" name="price" id="price" required placeholder="price">
            <input type="text" name="thumbnail" id="thumbnail" required placeholder="url thumbnail">
            <button id="btnProd">ADD PRODUCT</button>

            {{#if msg}}
                <div class="msg success">Producto agregado!</div>
            {{/if}}

        </form>
    </section>

    <div id="productList"></div>
</div>

<div class="unmedio">
    <section>
        <h3>Web Chat</h3>
        <form id="webchatForm">
            <input type="email" name="email" id="email" required placeholder="email">
            <input type="text" name="message" id="message" required placeholder="message">
            <button id="btnChat">SEND MESSAGE</button>
        </form>
    </section>

    <div id="messageList"></div>
</div>

<div class="clear"></div>
